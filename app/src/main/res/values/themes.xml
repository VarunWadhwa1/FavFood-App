<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Favfood" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="customColorValue">@color/black</item>
        <item name="android:autofilledHighlight">@android:color/transparent</item>
        <item name="custom_yellow">#FFB300</item>
        <item name="custom_green_button">#AED581</item>

    </style>
    <style name="BrandedSwitch.control" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge" >
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#1C92F2</item>
        <item name="colorSwitchThumbNormal">#000000</item>
    </style>

    <style name="BrandedSwitch.text" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="android:textColor">#EA2522</item>
        <item name="android:textSize">9sp</item>
    </style>
    <style name="Theme.Favfood.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Favfood.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Favfood.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>